/* pages/login/login.wxss */
.page{
    height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
}
.view_txt{
    width: 100%;
    height: 35px;
    margin-top: -60px;
    text-align: center;
    background-color: rgb(230, 63, 63);
}
.view_select{
    background-color: rgb(230, 63, 63);
    padding:  0px 10px;
    width: 100%;
    position: absolute;
    top: 39.5px;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
    text-align: center;
}
.login_txt{
    font-size: 23px;
    font-weight: bold;
    color: white;
}
.user_txt{
    font-size: 17px;
    font-weight: bold;
    margin-bottom: 5px;
    color: white;
}
.courier_txt{
    font-size: 17px;
    font-weight: bold;
    color: white;
}
.logo_view{
    margin-top: 60px;
}
.logo{
    width: 100px;
    height: 100px;  
}
.account_view{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20px;
}
.account_ipt{
    height: 35px;
    width: 180px;
    margin-left: 10px;
    background-color: whitesmoke;
    border-radius: 8px;
    font-size: 13px;
    text-align: center;
}
.lgn_btn1{
    /* margin: 10px; */
    margin-top: 20px;
    background-color: rgb(230, 63, 63);
    color: white;
}
.lgn_btn2{
    margin-top: 20px;
    color: rgb(87, 84, 84);
}
.pawd_txt{
