/* pages/mainAddress/mainAddress.wxss */
.page{
    height: 100vh;
    background-color: rgb(222,222,222);
}
.top_view{
    width: 100%;
    height: 150px;
    margin-left: 50px;
}
.page_section{
    display: flex;
    flex-direction: row;
    width: 93%;
    border: solid 1px lightgray;
    background-color: white;
    border-radius: 15px;
    padding: 5px;
    margin: 5px;
}
.box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 50px;
    margin-left: 10px;
}
.power{
  display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 50px;
}
.power1{
  display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 10px;
    margin-left: 20px;
}

.power2{
  display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  margin-right: 55px;
}
.box-txt{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.box-txt-up{
    font-weight: 600;
}
.box-txt-down{
    font-size: 11px;
    color: grey;
}
.icon{
    width: 70px;
    height: 70px;
}
.block_view{
    display: flex;
    flex-direction: column;
    width: 93%;
    border: solid 1px lightgray;
    background-color: white;
    border-radius: 15px;
    padding: 5px;
    margin: 5px;
}
.block_title{
    font-weight: 600;
    margin-bottom: 5px;
    margin-left: 20px
}
.title{
    border: 0px solid darkgray;
}
.tr{
display: flex;
width: 100%;
padding: 10px;
margin-bottom: 2px;
}

.td{
    width: 100%;
    align-items: center;
    justify-content: center;
    text-align: left;
    margin-bottom: 2px;

}
.btn{
    width: 50px !important;
    font-size: 13px;
    padding: 10px;
    background-color: rgb(219, 4, 4);
    color: white;
}