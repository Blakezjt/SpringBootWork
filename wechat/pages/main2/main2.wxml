<!--pages/main2/main2.wxml-->
<view class="pages">
  <view class="block_view1">
    <label for="">快递订单</label>
    <view class="block_vi">
      <text class="txt1">共{{number}}笔订单</text>
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">显示</view>
        <view class="weui-cell__ft">
          <radio checked="{{indicatorDots}}" catchtap="changeIndicatorDots" data-property-name="indicatorDots" />
        </view>
      </view>
    </view>
  </view>
  <view class="block_view">
    <text class="txt2">共{{comsumer}}个客户给我下{{number}}单</text>
    <view style="padding-left: 50%;"><button class="btn1" bind:tap="setList">></button></view>
  </view>
  <view class="block_view2" id="list" wx:if="{{indicatorDots==true}}" wx:for="{{dataList}}" wx:key="id"  wx:for-index="index">
    <view class="block_view3" id="top_txt">
      <text class="txt3">订单号：{{item.orderTel}}</text>
      <text class="txt4">用户-驿站寄件</text>
    </view>
    <view style="padding-bottom:20px;" id="center_txt">
      <text class="txt3">下单时间：{{item.orderTime}}</text>
    </view>
    <view class="block_view2" id="bottom_txt">
      <text class="txt5">{{item.userName}}</text>
      <label for="" style="padding: 5%;">已签收</label>
      <text class="txt5">{{item.receiver}}</text>
      <view style="padding-top:5px;">
        <text class="txt7">{{item.fromAddress}}</text>
        <text class="txt6">...=>...</text>
        <text class="txt7">{{item.toAddress}}</text>
      </view>
    </view>
    <view style="padding-top: 10px;padding-left: 80%;">
      <button class="btn2" bind:tap="deleteList">删除</button>
    </view>
  </view>
</view>