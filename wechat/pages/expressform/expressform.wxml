<!--expressform.wxml-->
<view class="pages">
  <view class="block_view" bindtap="toAddress">
    <label for="">寄件人信息</label>
    <view wx:if="{{userInfo==null}}">
      <input type="text" placeholder="请输入真实姓名" bindtap="toAddress" />
    </view>
    <view class="block_view" style="padding:10px;margin-top: 10px;" wx:else="">
      <label >{{userInfo.userName}}</label>
      <text class="send_user_info" >{{userInfo.tel}} {{userInfo.region[0]}}{{userInfo.region[1]}}{{userInfo.region[2]}} {{userInfo.address}}</text>
    </view>
    <view class="line_view"></view>
    <label for="">收件人信息</label>
    <view wx:if="{{userInfo==null}}">
      <input type="text" placeholder="请输入真实姓名" bindtap="toAddress" />
    </view>
    <view class="block_view" style="padding:10px;margin-top: 10px;" wx:else="">
      <label >{{userInfo.serverName}}</label>
      <text class="send_user_info" >{{userInfo.serverTel}} {{userInfo.receiverRegion[0]}}{{userInfo.receiverRegion[1]}}{{userInfo.receiverRegion[2]}} {{userInfo.serverAddress}}</text>
    </view>
    <!-- <input type="text" placeholder="请输入真实姓名" bindtap="toAddress" value="{{userInfo.serverName}}" /> -->
  </view>
  <view class="block_view">
    <label for="" style="padding-bottom: 10px;">订单信息</label>
    <view style="display: flex;">
      <label for="">订单号</label>
      <input style="padding-left: 14%;" type="text" placeholder="请输入订单号" value="" />
    </view>

    <view style="display: flex; padding-top: 10px;">
      <label for="">订单时间</label>
      <input style="padding-left: 10%;" type="text" placeholder="请输入订单时间" value="" />
    </view>
  </view>
  <view class="block_view">
    <label for="">物品类型</label>
    <radio-group bindchange="" class="block_radio">
      <radio value="r1" checked="true" />大物件
      <radio value="r2" checked="true" />小物件
      <radio value="r3" />其他
    </radio-group>
    <view class="line_view"></view>
    <view class="weight_view">
      <label for="" style="margin-top: 8px;">预估重量</label>
      <button class="decline_btn" bindtap="declineWeight">-</button><label for="" style="margin-top: 8px;">{{weight}}{{units}}</label><button class="add_btn" bindtap="addWeight">+</button>
    </view>
  </view>
  <view class="block_view">
    <label for="">寄件方式</label>
    <radio-group bindchange="" class="block_radio">
      <radio value="r1" checked="true" /><label for="" style="font-size: small;">用户-驿站寄件</label>
      <radio value="r2" /><label for="" style="font-size: small;">用户-网点寄件</label>
      <radio value="r3" /><label for="" style="font-size: small;">快递员上门取件</label>
    </radio-group>
  </view>
  
  <view class="block_view">
    <button bind:tap="backMain">打印</button>
  </view>
</view>