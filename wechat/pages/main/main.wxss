.main{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.page {
    height: 145vh;
    background-color: rgb(222, 222, 222);
}

.page_section {
    display: flex;
    flex-direction: row;
    width: 95%;
    border: solid 1px lightgrey;
    background-color: white;
    border-radius: 10px;
    padding: 10px;
}

.block_view {
    display: flex;
    flex-direction: column;
    width: 95%;
    border: solid 1px lightgrey;
    background-color: white;
    border-radius: 10px;
    padding: 10px;
    height: 500rpx;
}

.news {
    display: flex;
    flex-direction: row;
    width: 93%;
    border: solid 1px lightgray;
    background-color: white;
    border-radius: 15px;
    padding: 5px;
    margin: 5px;
}

.news_tr {
    display: flex;
    width: 100%;
    padding: 10px;
    margin-bottom: 2px;
}

.news_td {
    width: 100%;
    align-items: center;
    justify-content: center;
    text-align: left;
    margin-bottom: 2px;

}
.block_new{
    display: flex;
    flex-direction: column;
    width: 95%;
    border: solid 1px lightgrey;
    background-color: white;
    border-radius: 10px;
    padding: 10px;
    height: 750rpx;
}
.top_view {
    width: 100%;
    height: 350rpx;
}

.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 50%;
}

.box-txt {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.box-txt-up {
    font-weight: 600;
}

.box-txt-down {
    font-size: small;
    color: gray;
}

.table {
    border: 0px solid darkgray;
    font-size: 12px;
    /* padding: 5px; */
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    justify-content: center;
}

.td {
    width: 30%;
    height: 40%;
    margin: 10rpx;
    text-align: center;
    box-sizing: border-box;
    border-radius: 20rpx;
    background-color: rgb(198, 228, 255);
    font-size: 32rpx;
}
.box_txt_down{
    font-size: 11px;
    color: grey;
}
.td1 {
    width: 20%;
    justify-content: left;
    text-align: center;
    display: block;
    box-sizing: border-box
}

.btn {
    width: 40px !important;
    background-color: brown;
    color: white;
    font-size: 10px;
    padding: 10px;
}

.img {
    width: 150rpx;
    height: 150rpx;
}

.img-main {
    width: 750rpx;
    height: 350rpx;
}